package br.tec.lemuel.principal;

import java.util.Scanner; 
import br.tec.lemuel.controller.Negocio;

public class MediaAluno {

	public static void main(String[] args) {
	
		
		int n1, n2, n3, n4;
		double media;
		
		Scanner read = new Scanner(System.in);

		
		System.out.println("Digite a nota do seu 1º Bimestre: ");
		n1 = read.nextInt();
		System.out.println("Digite a nota do seu 2º Bimestre: ");
		n2 = read.nextInt();
		System.out.println("Digite a nota do seu 3º Bimestre: ");
		n3 =read.nextInt();
		System.out.println("Digite a nota do seu 4º Bimestre: ");
		n4 = read.nextInt();
		
		media = (n1+n2+n3+n4)/4;
		
		if (media >= 7) {
			System.out.println("Você está aprovado!");
		} else {
			System.out.println("Você está reprovado! ");
		}
	
			
		}
		
		
	}
	

